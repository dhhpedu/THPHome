@page
@model WebUI.Pages.Albums.IndexModel

<main class="container">
    <div class="row">
        @foreach (var item in Model.Galleries)
        {
            <div class="col-2 col-md-2">
                <div class="shadow">
                    <div class="">
                        <a href="/album/@item.NormalizedName">
                            <img src="@item.Thumbnail" class="w-100 object-cover h-48" />
                        </a>
                    </div>
                    <div class="px-2 py-1">
                        <a href="/album/@item.NormalizedName-@item.Id">@item.Name</a>
                    </div>
                </div>
            </div>
        }
    </div>
</main>