@model IEnumerable<ApplicationCore.Models.Posts.PostView>

<div class="px-4 py-2 bg-gray-800 text-white rounded-t mb-1"><i class="fa fa-random"></i> <b>Có thể bạn thích</b></div>

@if (Model != null)
{
    <div class="shadow mb-3">
        @foreach (var item in Model)
        {
            <div class="flex mt-1 items-center">
                <a href="/post/@($"{item.Url}-{item.Id}.html")" title="@item.Title" class="bg-gray-900 mr-2 h-16 w-20">
                    <img class="object-fit-cover h-16 w-20 max-w-none transition duration-700 hover:opacity-50" src="@item.Thumbnail" alt="@item.Title" />
                </a>
                <div>
                    <div class="mb-1"><a href="@item.Url" title="@item.Title">@item.Title</a></div>
                    <div class="text-gray-500 text-xs flex">
                        <div class="mr-2"><i class="fa fa-calendar mr-2"></i>@item.ModifiedDate</div>
                        <div><i class="fas fa-eye mr-2"></i>@item.View.ToString("N0")</div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <partial name="/Views/Components/_Empty.cshtml" />
}