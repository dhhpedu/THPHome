@model IEnumerable<ApplicationCore.Models.Posts.PostView>

<div class="title active">
    <b class="mr-1">
        <localize key="notification" />
    </b>
    <svg width="22" height="19" viewBox="0 0 22 19" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M19.6667 0.5H2.33341C1.13091 0.5 0.177581 1.50125 0.177581 2.75L0.166748 16.25C0.166748 17.4988 1.13091 18.5 2.33341 18.5H19.6667C20.8692 18.5 21.8334 17.4988 21.8334 16.25V2.75C21.8334 1.50125 20.8692 0.5 19.6667 0.5ZM7.20842 12.875H5.90842L3.14591 8.9375V12.875H1.79175V6.125H3.14591L5.85425 10.0625V6.125H7.20842V12.875ZM12.6251 7.5425H9.91675V8.8025H12.6251V10.22H9.91675V11.4688H12.6251V12.875H8.29175V6.125H12.6251V7.5425ZM20.2084 11.75C20.2084 12.3687 19.7209 12.875 19.1251 12.875H14.7917C14.1959 12.875 13.7084 12.3687 13.7084 11.75V6.125H15.0626V11.1988H16.2867V7.23875H17.6409V11.1875H18.8542V6.125H20.2084V11.75Z" fill="white" />
    </svg>
</div>

@if (Model != null)
{
    <div class="mb-4">
        @foreach (var item in Model)
        {
            <div class="d-flex mt-1 align-items-center">
                <a href="@item.Url" title="@item.Title" class="bg-dark mr-2" style="width: 70px; height: 55px">
                    @if (!string.IsNullOrEmpty(item.Thumbnail))
                    {
                        <img class="object-fit-cover max-w-none transition duration-700 hover:opacity-50" src="@item.Thumbnail" alt="IMG" style="width: 70px; height: 55px" />
                    }
                </a>
                <div>
                    <div class="mb-1 line-clamp-2">
                        <a href="@item.Url" title="@item.Title">@item.Title</a>
                    </div>
                    <div class="text-muted text-xs d-flex">
                        <div class="mr-2"><i class="fa fa-calendar mr-2"></i>@item.ModifiedDate</div>
                        <div><i class="fas fa-eye mr-2"></i>@item.View.ToString("N0")</div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <partial name="/Views/Components/_Empty.cshtml" />
}