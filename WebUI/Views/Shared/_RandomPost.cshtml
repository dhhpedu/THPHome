@model IEnumerable<ApplicationCore.Models.Posts.PostView>

<div class="title active"><i class="fa fa-random"></i> <b>Thông báo</b></div>

@if (Model != null)
{
    <div class="mb-4">
        @foreach (var item in Model)
        {
            <div class="d-flex mt-1 align-items-center">
                <a href="/post/@($"{item.Url}-{item.Id}.html")" title="@item.Title" class="bg-dark mr-2" style="width: 80px; height: 64px">
                    <img class="object-fit-cover max-w-none transition duration-700 hover:opacity-50" src="@item.Thumbnail" alt="IMG" style="width: 80px; height: 64px" />
                </a>
                <div>
                    <div class="mb-1"><a href="@item.Url" title="@item.Title">@item.Title</a></div>
                    <div class="text-muted text-xs d-flex">
                        <div class="mr-2"><i class="fa fa-calendar mr-2"></i>@item.ModifiedDate</div>
                        <div><i class="fas fa-eye mr-2"></i>@item.View.ToString("N0")</div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <partial name="/Views/Components/_Empty.cshtml" />
}