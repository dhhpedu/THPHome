@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="flex list-none px-2 m-0">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="p-2">
            <a class="nav-link text-dark" href="/admin/user/profile" title="Manage">Hello @User.Identity.Name!</a>
        </li>
        <li class="p-2">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="p-2">
            <button type="button" onclick="toggleSearch()" id="search-button"><i class="fa fa-search"></i> Tìm kiếm</button>
            <form class="hidden flex items-center" id="search-form" action="/search/index" method="get">
                <input class="mr-2 border py-2 px-3 rounded" type="text" placeholder="Nhập từ khóa" aria-label="Search" name="keyword" />
                <button class="border rounded border-blue-600 flex w-10 h-10 items-center justify-center text-blue-600 hover:text-white hover:bg-blue-600 mr-2" type="submit"><i class="fa fa-search"></i></button>
                <button class="border rounded border-red-600 flex w-10 h-10 items-center justify-center text-red-600 hover:text-white hover:bg-red-600" type="button" onclick="toggleSearch()"><i class="fa fa-times"></i></button>
            </form>
        </li>
    }
</ul>