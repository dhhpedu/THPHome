@using ApplicationCore.Entities; 
@model List<ApplicationCore.Models.Posts.CategoryWithPost>

@{
    ViewData["Title"] = "Trang chủ";
    var slides = ViewBag.Slides as IEnumerable<Banner>;
    int i = 0;
    var boxMenu = ViewBag.BoxMenu as IEnumerable<Menu>;
}

<div class="row mb-4">
    <div class="col-md-8">
        <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
            </div>
            <div class="carousel-inner">
                @foreach (var item in slides)
                {
                    <div class="carousel-item @(i == 0 ? "active" : "")">
                        <img src="@item.Image" class="d-block w-100" alt="...">
                    </div>
                    @(i++)
                }
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
    <div class="col-md-4">
        <div class="title">ĐIỀU HÀNH HP-eUniversity</div>
        <div class="row">
            @foreach (var item in boxMenu)
            {
                <div class="col-md-4">
                    <a href="@item.Url" target="_blank">
                        <div class="box">
                            <div class="icon">
                                @Html.Raw(item.Icon)
                            </div>
                            <div class="name text-truncate" data-bs-toggle="tooltip" title="@item.Name">@item.Name</div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6">
                    <div class="title"><a href="/category/@item.CategoryId" class="text-white">@item.CategoryName</a></div>
                    <div class="content">
                        @foreach (var post in item.ListPosts)
                        {
                            <div class="list-group border-top-0">
                                <a href="@post.Url" class="list-group-item list-group-item-action">@post.Title</a>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="col-md-4">
        <partial name="/Views/Shared/_RandomPost.cshtml" model="ViewBag.LastedList" />
    </div>
</div>