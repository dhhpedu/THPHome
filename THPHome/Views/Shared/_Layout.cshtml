<body>
    <div class="triangle-overlay-above"></div>
    <div class="triangle-overlay-below"></div>
    <div class="bg-slate-100">
        <div class="container flex justify-between items-center">
            <div class="flex gap-8 justify-end items-center ml-20">
                <ul class="list-unstyled d-flex mb-0 gap-8">
                    <li> <a class="p-2 nav-link text-slate-500" href="https://www.facebook.com/HaiPhongUniversity"><i class="fa-brands fa-facebook"></i></a> </li>
                    <li> <a class="p-2 nav-link text-slate-500" href="https://www.instagram.com/hpu.off"><i class="fa-brands fa-instagram"></i></a> </li>
                    <li> <a class="p-2 nav-link text-slate-500" href="https://t.me/haiphonguniversity"><i class="fa-brands fa-telegram"></i></a> </li>
                    <li> <a class="p-2 nav-link text-slate-500" href="https://www.linkedin.com/company/hai-phong-university/"><i class="fa-brands fa-linkedin-in"></i></a> </li>
                </ul>
            </div>
            <div class="info-header">
                <div class="contact">
                    <localize key="contact" /> : 0398.171.171 - 0773.171.171
                </div>
                <div class="dropdown">
                    <button class="btn btn-sm dropdown-toggle text-slate-700 font-medium" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-globe me-2"></i>
                        Ngôn ngữ
                    </button>
                    <ul class="dropdown-menu shadow text-sm">
                        <li>
                            <a class="dropdown-item font-medium text-slate-700" href="/?locale=en-US">
                                <span role="img" aria-label="English" style="margin-right: 8px;">🇺🇸</span>
                                English
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item font-medium text-slate-700" href="/?locale=zh-CN">
                                <span role="img" aria-label="简体中文" style="margin-right: 8px;">🇨🇳</span>
                                简体中文
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item font-medium text-slate-700" href="/?locale=ja-JP">
                                <span role="img" aria-label="日本語" style="margin-right: 8px;">🇯🇵</span>
                                日本語
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item font-medium text-slate-700" href="/?locale=ko-KR">
                                <span role="img" aria-label="한국어" style="margin-right: 8px;">🇰🇷</span>
                                한국어
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item font-medium text-slate-700" href="/?locale=vi-VN">
                                <span role="img" aria-label="Tiếng Việt" style="margin-right: 8px;">🇻🇳</span>
                                Tiếng Việt
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="nav-item-inner relative p-2">
                    <a href="https://admin.dhhp.edu.vn" class="text-slate-700 hover:text-gray-900 text-sm font-medium hidden md:block">
                        <i class="fa-solid fa-right-to-bracket me-2"></i>
                        <localize key="login" />
                    </a>
                </div>
            </div>
        </div>
    </div>

    @await Component.InvokeAsync("Logo")
    @* <div class="header-banner"> *@
    @*     <img src="~/img/DHHP.png"> *@
    @* </div> *@
    <header class="text-white mb-0 main-menu shadow mb-md-4">
        <div class="container">
            <div class="navbar navbar-expand-lg">
                <a href="/" class="d-flex align-items-center mb-lg-0 text-white nav-brand md:h-14 md:w-14 h-12 w-12 items-center justify-center">
                    <i class="fas fa-home"></i>
                </a>
                <button class="navbar-toggler border-white"
                        type="button" data-bs-toggle="offcanvas"
                        data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false"
                        aria-label="Toggle navigation">
                    <i class="fa-solid fa-bars"></i>
                </button>
                <div class="offcanvas offcanvas-end" id="navbarNavAltMarkup">
                    <div class="offcanvas-header border-b border-dashed">
                        <h5 class="offcanvas-title text-white font-semibold" id="offcanvasNavbar2Label">
                            Hai Phong University
                        </h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                    </div>
                    <div class="offcanvas-body items-center">
                        <div class="navbar-nav justify-content-end flex-grow-1 pe-3 gap-x-6 ml-[10px]">
                            @await Component.InvokeAsync("Menu", new { type = MenuType.MAIN })
                        </div>

                        <div class="flex justify-end">
                            <div class="searchBox">
                                <div class="formSearch">
                                    <form class="d-flex mt-3 mt-lg-0 items-center border-2 border-dark rounded-[30px]" action="/search">
                                        <input type="search" class="h-8 md:h-10 px-3 w-full md:w-[200px] text-dark rounded-full" placeholder="Nhập từ khóa..." aria-label="Search" name="searchTerm">
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
    
    <partial name="_CookieConsentPartial" />
    <main role="main" class="main mb-4">
        @RenderBody()
    </main>
