@using ApplicationCore.Entities

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="@Html.Raw(ViewData["Description"])" />
    <meta name="robots" content="index,follow" />
    <title>@Html.Raw(ViewData["Title"])</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.plyr.io/3.7.8/plyr.css" />
    <link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />
</head>
<body>

    @await Component.InvokeAsync("Menu", new { type = MenuType.TOP })

    @await Component.InvokeAsync("Logo")

    <header class="text-white mb-4 main-menu shadow">
        <div class="container">
            <div class="navbar navbar-expand-lg">
                <a href="/" class="d-flex align-items-center mb-lg-0 text-white nav-brand md:h-14 md:w-14 h-12 w-12 items-center justify-center">
                    <i class="fas fa-home"></i>
                </a>
                <button class="navbar-toggler border-white"
                        type="button" data-bs-toggle="offcanvas"
                        data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false"
                        aria-label="Toggle navigation">
                    <i class="fa-solid fa-bars"></i>
                </button>
                <div class="offcanvas offcanvas-end" id="navbarNavAltMarkup">
                    <div class="offcanvas-header border-b border-dashed">
                        <h5 class="offcanvas-title text-white font-semibold" id="offcanvasNavbar2Label">
                            Hai Phong University
                        </h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                    </div>
                    <div class="offcanvas-body">
                        <div class="navbar-nav justify-content-end flex-grow-1 pe-3">
                            @await Component.InvokeAsync("Menu", new { type = MenuType.MAIN })
                        </div>
                        <form class="d-flex mt-3 mt-lg-0" action="/search">
                            <input type="search" class="h-10 md:h-14 px-3 w-full md:w-64 text-dark" placeholder="Nhập từ khóa..." aria-label="Search" name="searchTerm">
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <partial name="_CookieConsentPartial" />
    <main role="main" class="main mb-4">
        @RenderBody()
    </main>
    <footer class="bg-slate-100 pt-5">
        <div class="container">
            <div class="row text-sm pb-4">
                <div class="col-md-2 d-none d-md-block">
                    <div>
                        <img src="https://dhhp.edu.vn/logo/logo-65.png" style="width: 130px; height: 130px;" alt="LOGO 65 YEAR" />
                    </div>
                    <ul class="list-inline mb-0 mt-3">
                        <li class="list-inline-item"><a href="https://www.facebook.com/HaiPhongUniversity" class="btn btn-sm bg-white hover:shadow-lg px-2 shadow text-blue-500"><i class="fa-facebook-f fa-fw fab"></i></a></li>
                        <li class="list-inline-item"><a href="https://www.instagram.com/hpu.off" class="btn btn-sm bg-white px-2 shadow text-rose-500"><i class="fa-fw fa-instagram fab"></i></a></li>
                        <li class="list-inline-item"><a href="https://t.me/haiphonguniversity" class="btn btn-sm bg-white px-2 shadow text-sky-400"><i class="fa-brands fa-telegram"></i></a></li>
                        <li class="list-inline-item"><a href="https://www.linkedin.com/company/hai-phong-university/" class="btn btn-sm bg-white px-2 shadow text-blue-700"><i class="fa-fw fa-linkedin-in fab"></i></a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <div class="font-bold mb-2 uppercase text-base">Cơ sở I</div>
                    <div class="mb-2">
                        <i class="fas fa-home mr-2"></i>Trường Đại học Hải Phòng
                    </div>
                    <div class="mb-2">
                        <i class="fas fa-phone mr-2"></i>Điện thoại: (+84225) 3876 338
                    </div>
                    <div class="mb-2">
                        <i class="fas fa-print mr-2"></i>Fax: (+84225) 3876 893
                    </div>
                    <div class="mb-2">
                        <i class="fas fa-map-marker-alt mr-2"></i><localize key="address" />: 171 Phan Đăng Lưu , Kiến An, Hải Phòng, Việt Nam.
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="font-bold mb-2 uppercase text-base">Cơ sở II</div>
                    <div class="mb-2">
                        <i class="fa-solid fa-caret-right"></i>
                        Điện thoại: (+84225) 3261 316
                    </div>
                    <div class="mb-2">
                        <i class="fa-solid fa-caret-right"></i>
                        246B - Đà nẵng - Ngô Quyền - Hải Phòng
                    </div>
                    <div class="mb-2">
                        <i class="fa-solid fa-caret-right"></i>
                        Điện thoại: (+84225) 3591 034
                    </div>
                    <div class="mb-2">
                        <i class="fa-solid fa-caret-right"></i>
                        49 Trần Phú - Ngô Quyền - Hải Phòng
                    </div>
                </div>
                <div class="col-md-3 d-none d-md-block">
                    <div class="font-bold mb-2 uppercase text-base">Liên hệ</div>
                    <div class="mb-2">
                        <i class="fa-solid fa-caret-right"></i>
                        Hotline: (+84225) 3876 338
                    </div>
                    <div class="mb-2">
                        <i class="fa-solid fa-caret-right"></i>
                        8:AM - 5:PM UTC+7
                    </div>
                    <div class="mb-2">
                        <i class="fa-solid fa-caret-right"></i>
                        Email: <a href="mailto:info@dhhp.edu.vn">info@dhhp.edu.vn</a>
                    </div>
                    <div class="flex gap-2 mt-2">
                        <div>
                            <a href="javascript:void(0);">
                                <img src="/css/imgs/google-play.svg" alt="google-play" width="145">
                            </a>
                        </div>
                        <div>
                            <a href="javascript:void(0);"><img src="/css/imgs/app-store.svg" alt="app-store" width="145"></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="footer-bottom">
            <div class="footer-divide"></div>
            <div class="container">
                <div class="d-flex justify-content-between items-center py-2 text-sm gap-2 flex-col flex-col-reverse md:flex-row">
                    <div class="text-gray-600">Copyright © @DateTime.Now.Year Trường Đại học Hải Phòng</div>
                    <div class="flex jusify-end gap-2">
                        <div class="dropdown">
                            <button class="btn btn-sm dropdown-toggle text-gray-600" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-globe me-2"></i>
                                Ngôn ngữ
                            </button>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" href="/?locale=en-US">
                                        <span role="img" aria-label="English" style="margin-right: 8px;">🇺🇸</span>
                                        English
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="/?locale=zh-CN">
                                        <span role="img" aria-label="简体中文" style="margin-right: 8px;">🇨🇳</span>
                                        简体中文
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="/?locale=ja-JP">
                                        <span role="img" aria-label="日本語" style="margin-right: 8px;">🇯🇵</span>
                                        日本語
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="/?locale=ko-KR">
                                        <span role="img" aria-label="한국어" style="margin-right: 8px;">🇰🇷</span>
                                        한국어
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="/?locale=vi-VN">
                                        <span role="img" aria-label="Tiếng Việt" style="margin-right: 8px;">🇻🇳</span>
                                        Tiếng Việt
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <a href="#" class="btn btn-sm text-gray-600">
                            <localize key="terms" />
                        </a>
                        <a href="#" class="btn btn-sm text-gray-600">
                            <localize key="privacy_policy" />
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script src="https://cdn.plyr.io/3.7.8/plyr.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
