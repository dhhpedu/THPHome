@page
@using THPHome.Pages.Albums
@model THPHome.Pages.Albums.IndexModel

<main class="container">
    <div class="row">
        @foreach (var item in Model.Galleries)
        {
            <div class="col-2 col-md-2 mb-4">
                <div class="shadow">
                    <div class="">
                        <a href="/album/@item.Url-@item.Id">
                            <img src="@item.Thumbnail" class="w-100 object-cover h-48" />
                        </a>
                    </div>
                    <div class="px-2 py-1 line-clamp-2 md:min-h-14">
                        <a href="/album/@item.Url-@item.Id">@item.Title</a>
                    </div>
                </div>
            </div>
        }
    </div>
</main>